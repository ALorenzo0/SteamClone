@{
	@model SteamClone.ViewModels.GiochiViewModels
}

<body>
	<h1>@ViewData["Title"]</h1>

	<head>

		<h1 class="benvenuto">Benvenuto su Steam</h1>

		<b2><br /><br /><br />IN EVIDENZA E CONSIGLIATI</b2>

		<div class="gameContainer">

			@foreach(var Gioco in Model.giochi)
			{
				<div class="card">
					<img src="@Gioco.immagine" alt="Avatar" style="width:100%">
					<div class="container1">
						<h4><b>@Gioco.gioco</b></h4>
						<p><br />RECENSIONI</p>
						<div class="container">
							<div class="skills wow">100%</div>
						</div>
					</div>
				</div>
			}

			

		</div>



		@* <meta name="descrizione" content=" descrizione dettagliata" /> *@

	</head>


</body>

